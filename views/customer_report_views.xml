<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_pos_customer_report_form" model="ir.ui.view">
        <field name="name">pos.customer.report.form</field>
        <field name="model">pos.customer.report</field>
        <field name="arch" type="xml">
            <form string="Customer Report">
                <header>
                    <button name="action_fetch_report" type="object" string="Fetch Report" class="btn-primary"/>
                    <button name="action_generate_csv" type="object" string="Export CSV"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="branch_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="session_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="category_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="pricelist_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <separator string="Report"/>
                    <field name="html_table" widget="html" nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pos_customer_report" model="ir.actions.act_window">
        <field name="name">Customer Report</field>
        <field name="res_model">pos.customer.report</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'default_start_date': context_today(), 'default_end_date': context_today()}</field>
    </record>

</odoo>
